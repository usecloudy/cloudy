{
    "$schema": "https://turbo.build/schema.json",
    "ui": "stream",
    "globalPassThroughEnv": ["SENTRY_AUTH_TOKEN"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"]
        },
        "@cloudy/app#build": {
            "dependsOn": ["^build"],
            "outputs": ["apps/app/build/**"],
            "env": [
                "REACT_APP_SUPABASE_URL",
                "REACT_APP_API_BASE_URL",
                "REACT_APP_SUPABASE_ANON_KEY",
                "REACT_APP_POSTHOG_KEY"
            ]
        },
        "@cloudy/web#build": {
            "dependsOn": ["^build"],
            "outputs": ["apps/web/.next/**", "!apps/web/.next/cache/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
