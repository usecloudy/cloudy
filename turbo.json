{
    "$schema": "https://turbo.build/schema.json",
    "ui": "stream",
    "globalPassThroughEnv": ["SENTRY_AUTH_TOKEN"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"]
        },
        "@cloudy/app#build": {
            "dependsOn": ["^build"],
            "outputs": ["apps/app/build/**"]
        },
        "@cloudy/web#build": {
            "dependsOn": ["^build"],
            "outputs": ["apps/web/.next/**", "!.next/cache/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
